@model IEnumerable<NutriHub.Models.ListaCompras>

@{
    ViewBag.Title = "Lista de compras";
    Layout = "~/Views/Shared/_LayoutPa.cshtml";
}

<h2>Lista de compras</h2>

<p>
    @Html.ActionLink("Crear lista de compras", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nombre
        </th>
        <th>
            Alimento
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Alimento.nombre)
        </td>
        <td>
            <a href="@Url.Action("Edit", "ListaCompras", new { id = item.idLista })" class="btn-index">Editar<i class=" icon ion-md-create"></i></a>
            <a href="@Url.Action("Details", "ListaCompras", new { id = item.idLista })" class="btn-index">Detalles  <i class=" ion-md-add"></i></a>
            <a href="@Url.Action("Delete", "ListaCompras", new { id = item.idLista })" class="btn-index">Eliminar<i class=" icon ion-md-trash"></i></a>
        </td>
    </tr>
}

</table>
