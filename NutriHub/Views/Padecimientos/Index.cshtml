@model IEnumerable<NutriHub.Models.Padecimiento>

@{
    ViewBag.Title = "Padecimientos";
}

<div class="view-container">
    <h2>Padecimientos</h2>

    <p>
        @Html.ActionLink("Agregar padecimiento", "Create")
    </p>
    <table class="table table-striped table-bordered" id="example">
        <thead>
            <tr>
                <th>
                    ID del padecimiento
                </th>
                <th>
                    Nombre
                </th>
                <th>
                    Descripción
                </th>
                <th>
                    Tratamiento
                </th>
                <th>
                    Opciones
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="width: 100px;">
                        @Html.DisplayFor(modelItem => item.idPadecimiento)
                    </td>
                    <td style="width: 100px;">
                        @Html.DisplayFor(modelItem => item.nombre)
                    </td>
                    <td style="width: 500px;">
                        @Html.DisplayFor(modelItem => item.descripcion)
                    </td>
                    <td style="width: 560px;">
                        @Html.DisplayFor(modelItem => item.tratamiento)
                    </td>
                    <td>
                        @*@Html.ActionLink("Editar", "Edit", new { id = item.idPadecimiento })
                        @Html.ActionLink("Detalles", "Details", new { id = item.idPadecimiento })
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.idPadecimiento })*@
                        <a href="@Url.Action("Edit", "Padecimientos", new { id = item.idPadecimiento })" class="btn-index">Editar<i class=" icon ion-md-create"></i></a>
                            <a href="@Url.Action("Details", "Padecimientos", new { id = item.idPadecimiento })" class="btn-index">Detalles<i class=" icon ion-md-add"></i></a>
                            <a href="@Url.Action("Delete", "Padecimientos", new { id = item.idPadecimiento })" class="btn-index">Eliminar<i class=" icon ion-md-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
